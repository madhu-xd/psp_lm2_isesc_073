# include <stdio.h>
# include <math.h>
void main()
{
float a,b,c,r1,r2,d;
printf("enter the coefficients \n: ");
scanf("%f%f%f",&a,&b,&c);
if(a==0||b==0||c==0)
 printf("invalid input!");
else()
{ d=b*b-4ac;
      if(d>0)
      {
      printf("the roots are real and distinct");
      r1=(-b+sqrt(d))/(2*a);
      r2=(-b-sqrt(d))/(2*a);
      printf("\n r1=%f",r1);
      printf("\n r2=%f",r2);
      }
      elseif(d=0)
      {
      printf("the roots are real and equal");
      r1=r2=-b/(2*a);
      printf("\n r1=r2=%f",r1,r2);
      }
      else(d<0)
      {
      printf("the roots are complex conjugates");
      r1=-b/(2*a);
      r2=sqrt(fabs(d))/(2*a)
      printf("\n r1=%f+i%f",r1,r2);
      printf("\n r2=%f+i%f",r1,r2);
      }
 }
 }
      
      
      
      
      
  
 
